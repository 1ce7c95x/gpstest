<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/status_location_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/status_margin"
    android:layout_marginStart="@dimen/status_margin"
    android:layout_marginRight="@dimen/status_margin"
    android:layout_marginEnd="@dimen/status_margin"
    android:layout_marginTop="@dimen/status_margin"
    android:layout_marginBottom="@dimen/status_margin"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/map_card_inner_margin"
        android:layout_marginStart="@dimen/map_card_inner_margin"
        android:layout_marginRight="@dimen/map_card_inner_margin"
        android:layout_marginEnd="@dimen/map_card_inner_margin"
        android:padding="5dp">

        <TextView
            android:id="@+id/set_ground_truth"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:text="@string/set_ground_truth" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:id="@+id/ground_truth_lat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/set_ground_truth"
            android:layout_marginTop="@dimen/status_margin">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/ground_truth_text_size"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:hint="@string/ground_truth_latitude" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:id="@+id/ground_truth_long"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/status_margin"
            android:layout_below="@id/ground_truth_lat">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/ground_truth_text_size"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:hint="@string/ground_truth_longitude" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:id="@+id/ground_truth_alt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/status_margin"
            android:layout_marginBottom="@dimen/status_margin"
            android:layout_below="@id/ground_truth_long">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/ground_truth_text_size"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:hint="@string/ground_truth_altitude" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ground_truth_alt"
            android:layout_alignParentRight="true"
            android:text="@string/save" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>